{
  "name": "webpack-starter",
  "version": "1.0.0",
  "description": "Production ready webpack 4 configurations",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack/dev.config.js --colors --progress",
    "build": "npm run clean && cross-env NODE_ENV=production webpack --config config/webpack/prod.config.js --colors --progress",
    "clean": "rimraf dist",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nunisa/webpack-starter.git"
  },
  "keywords": [
    "webpack4",
    "boilerplate",
    "nunisa"
  ],
  "author": "nunisa",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nunisa/webpack-starter/issues"
  },
  "homepage": "https://github.com/nunisa/webpack-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.4",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "cross-env": "^5.2.0",
    "css-loader": "^2.1.1",
    "csv-loader": "^3.0.2",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "mini-css-extract-plugin": "^0.6.0",
    "node-sass": "^7.0.0",
    "object-assign": "^4.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.6.0",
    "promise": "^8.0.3",
    "raf": "^3.4.1",
    "sass-loader": "^7.1.0",
    "terser-webpack-plugin": "^1.2.4",
    "uglifyjs-webpack-plugin": "^2.1.3",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.3.1",
    "webpack-merge": "^4.2.1",
    "whatwg-fetch": "^3.0.0",
    "xml-loader": "^1.2.1"
  },
  "dependencies": {
    "core-js": "^3.0.1",
    "path": "^0.12.7",
    "regenerator-runtime": "^0.13.2",
    "rimraf": "^2.6.3"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/config/jest/polyfill.js"
    ],
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.(le|sa|sc|c)ss$": "<rootDir>/config/jest/cssTransform.js",
      "(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(babel-jest)/)"
    ]
  }
}
